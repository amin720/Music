
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bnr Head -->
<section class="bnr-head">
    <div class="container">
        <div class="position-center-center">
            <h3>دانلود آهنگ </h3>
            <p>
               بهترین وب سایت برای جدید ترین آهنگ های ایرانی و خارجی
            </p>
        </div>
    </div>
</section>

<!-- Discover -->
<section class="discover discover-style-2">
    <div class="container">
        <div class="main-heading">
            <h3>جسجتو سبک موسیقی خود</h3>
            <hr>
        </div>

        <!-- Center Circle -->
        <div class="outer">
            <div class="center-part">
                <div class="position-center-center"> با سلیقه خود وارد شوید</div>
            </div>

            <!-- Bramds -->
            <div class="discover-music">
                <ul class="row">
                    @foreach (var item in ViewBag.ListGenres)
                    {
                        <li class="col-sm-4">
                            <a href="media.html">@item.Name</a>
                            <img class="img-responsive" src="~/Library/images/dis-img-7.jpg" alt="">
                        </li>
                    }
                   
                </ul>
            </div>
        </div>
    </div>
</section>

